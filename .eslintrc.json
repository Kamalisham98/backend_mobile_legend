{
  "extends": "airbnb-base",
  "env": {
      "es6": true,
      "browser": true
  },
  "rules": {
      "brace-style": [
          "error",
          "stroustrup"
      ],
      "comma-dangle": [
          "error",
          "never"
      ],
      "no-unused-vars": [
          "warn"
      ],
      "no-var": [
          "off"
      ],
      "one-var": [
          "off"
      ],
      "no-extra-semi": [
        "error"
    ],
      "indent": [
        "error", 2, {
          "SwitchCase": 1,
          "ImportDeclaration": 1
        }
      ]
  }
}
